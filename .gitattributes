*.hdri filter=lfs diff=lfs merge=lfs -text lockable
*.hdr filter=lfs diff=lfs merge=lfs -text lockable
# Scene description formats for renderers
*.usd filter=lfs diff=lfs merge=lfs -text lockable
*.ifd filter=lfs diff=lfs merge=lfs -text lockable
*.rib filter=lfs diff=lfs merge=lfs -text lockable
# Houdini-specific formats (images & geometry)
*.pic filter=lfs diff=lfs merge=lfs -text lockable
